<canvas id="bestSalesChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = {{ labels|json_encode|raw }};
    const data = {{ data|json_encode|raw }};

    // Générer des couleurs aléatoires pour chaque barre
    const backgroundColors = labels.map((_, i) => {
        const hue = Math.floor(Math.random() * 360); // couleur différente par barre
        return `hsl(${hue}, 70%, 60%)`;
    });

    const ctx = document.getElementById('bestSalesChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Quantité vendue (commandes payées)',
                data: data,
                backgroundColor: backgroundColors,
                borderWidth: 1
            }]
        },
        options: {
            indexAxis: 'y', // ← graphique horizontal
            responsive: true,
            plugins: {
                legend: { display: false },
                tooltip: { 
                    callbacks: {
                        label: function(context) {
                            return context.dataset.label + ': ' + context.raw;
                        }
                    }
                }
            },
            scales: {
                x: { beginAtZero: true },
                y: {
                    ticks: {
                        autoSkip: false, // ne pas sauter de labels
                        maxRotation: 0,
                        minRotation: 0
                    }
                }
            }
        }
    });
</script>
