{# _partials/_categories-offres.html.twig #}
<h5>Filtrer par type d'offre :</h5>
<div class="filtre-categories-offres">
	<a href="{{path('offres-par-categories',{slug:'toutes'})}}" class="categorie-offres-item" data-url="/offres-par-categorie/toutes">Toutes</a>
	{% for cat in categoriesOffres %}
		<a href="{{path('offres-par-categories',{slug:cat.slug})}}" class="categorie-offres-item" data-url="/offres-par-categorie/{{cat.slug}}">{{cat.nom}}</a>
	{% endfor %}
</div>
