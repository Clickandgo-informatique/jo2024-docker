{% extends "base.html.twig" %}
{% block title %}
	Catalogue offres clients
{% endblock %}
{% block body %}
	<main>
	{# Filtre sur les catégories d'offres #}
	{% include '_partials/_categories-offres.html.twig' with { categoriesOffres : categoriesOffres } %}		
	
	   {# Loader affiché pendant l'AJAX #}
    <div id="loader" style="display:none; text-align:center; margin:20px 0;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
    </div>
{# Fin loader #}
	
	{# Contenu rafraichit en Ajax #}
			<div class="cards-container ajax-reloaded-data">
				{% include '_partials/_catalogue-offres-clients.html.twig' with { offres : offres } %}	
				{% include '_partials/_pagination-offres.html.twig' with { offres : offres } %}	
		</div>
	{# Fin de contenu Ajax #}

	</main>
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/cards.css')}}">
	<link rel="stylesheet" href="{{asset('assets/css/filters.css')}}">
{% endblock %}

		<script type="module" src="{{asset('assets/js/filters.js')}}"></script>
	
{% endblock %}