{% extends 'base.html.twig' %}
{% block title %}
	Liste des disciplines
{% endblock %}
{% block body %}
	<main>
		<H1 class="text-center">Liste des disciplines</H1>
        <a href="{{path('app_disciplines_new')}}"><i class="fa-solid fa-circle-plus"></i>Ajouter une discipline</a>
		<table>

			<thead>
				<th></th>
				<th></th>
				<th>intitulé</th>
			</thead>
			<tbody>

				{% for d in disciplines %}
					<tr>
						<td class="text-center">
							<a href="{{path('app_disciplines_edit',{slug:d.slug})}}">
								<i class="fa-solid fa-pen-to-square"></i>
							</a>
						</td>
						<td class="text-center">
							<a href="#">
								<i class="fa-solid fa-trash-can"></i>
							</a>
						</td>
						<td>{{d.intitule}}</td>
					</tr>
				{% else %}
					<p>Il n'existe encore aucune discipline enregistrée dans la base.</p>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/table.css')}}">
{% endblock %}
